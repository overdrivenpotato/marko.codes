.splash-header
    display flex
    flex-direction column

    align-items center
    justify-content center

    padding-top 50px

    &__name
        text-align center
        font-size 1.1rem
        margin 0.6em 0
        animation name 1.5s $ease-out-cubic

    &__logo
        padding-bottom 20px
        width 200px
        animation-fill-mode forwards
        animation logo 1.25s $ease-in-sine

    animation splash-header 1.75s $ease-out-cubic

@keyframes splash-header
    0%
        transform translate3d(0, a-splash-header-offset, 0)
        opacity 0

    100%
        transform translate3d(0, 0, 0)
        opacity 1

@keyframes logo
    0%
        opacity 0

    20%
        opacity 0

    100%
        opacity 1

@keyframes name
    0%
        opacity 0

    50%
        transform scale(0.9)
        opacity 0

    100%
        transform scale(1)
        opacity 1
